

<DrawerClickableItem@MDNavigationDrawerItem>
    focus_color: "#e7e4c0"
    text_color: "#4a4939"
    icon_color: "#4a4939"
    ripple_color: "#c5bdd2"
    selected_color: "#0c6c4d"


<DrawerLabelItem@MDNavigationDrawerItem>
    text_color: "#4a4939"
    icon_color: "#4a4939"
    focus_behavior: False
    selected_color: "#4a4939"
    _no_ripple_effect: True

<MainScreen>:

    MDTopAppBar:
        id : topbar
        pos_hint: {"top": 1}
        title: str(len(app.store["bandi_list"]))+" Bandi"  if screen_manager.current =="bandi_scr" else ""
        left_action_items: [["menu", lambda x : app.openmenu()]]
        right_action_items: [["magnify", lambda x: app.search_dialog()], [app.store["v_mode"], lambda x: app.change_mode()]] if screen_manager.current =="bandi_scr" else [[""]]
    MDNavigationLayout:
        id: nav_id
        size_hint_y: 1.0 - topbar.height/root.height 
        MDScreenManager:
            id: screen_manager

            Screen1:
                id : fonti_scr
            Screen2:
                id: bandi_scr
            Screen3:
                id : wait_scr
        MDNavigationDrawer:

            id: nav_drawer
            radius: (0, 16, 16, 0)

            MDNavigationDrawerMenu:
                id: menu_id


                MDNavigationDrawerHeader:
                    title: ""
                    title_color: "#4a4939"
                    text: "Bandi  Sardegna"
                    spacing: "4dp"
                    padding: "12dp", 0, 0, "56dp"
        
                    Image:
                        source:"./src/Blogo.png"
                    
      
                DrawerClickableItem:
                    icon: "format-list-checks"
                    right_text: str(len(app.store["fonti"]))
                    #text_right_color: "#4a4939"
                    text: "Fonti"

                    on_release: 
                        app.populate_fonti()
                        screen_manager.current = "fonti_scr"
                        nav_drawer.set_state("close")

                DrawerClickableItem:
                    icon: "newspaper-variant-multiple-outline"
                    text: "Bandi"
                    right_text: str(len(app.store["bandi_list"]))

                    id : bandi_link
                    #disabled : True if len(app.store["bandi_list"])==0 else False

                    on_release: 
                        screen_manager.current = "bandi_scr"
                        nav_drawer.set_state("close")

#                DrawerClickableItem:
#                    icon: "lightbulb-on-50"
#                    text: "Cambia tema"
#                    on_release: 
#                        app.change_light()

                MDNavigationDrawerDivider:

                DrawerClickableItem:
                    icon: "information-outline"
                    text: "Info"
                    on_release: 
                        app.info()
                        nav_drawer.set_state("close")



<Welcome>
    orientation: "vertical"
    spacing: "12dp"
    adaptive_height: True
    id : welcom
    height: "300dp"
    #width: "90dp"
    ScrollView:
        MDLabel:
            markup: True
            adaptive_height: True
            text: welcom.text

<Info>
    orientation: "vertical"
    spacing: "12dp"
    adaptive_height: True
    #height: "300dp"
    id : info
    on_touch_up :
        app.wb("https://github.com/teonactl/BandiSardegna")
    MDLabel:
        markup: True
        adaptive_height: True
        text: info.text
